<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mapMenu.MapActivity">

    <!--Mapbox Settings-->
    <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent"
            mapbox:mapbox_cameraTargetLat="4.6486259"
            mapbox:mapbox_cameraTargetLng="-74.081749"
            mapbox:mapbox_cameraTilt="60"
            mapbox:mapbox_cameraZoom="12"
            mapbox:mapbox_backgroundTintColor="@color/white"
            mapbox:mapbox_bearingTintColor="@color/colorPrimary_blue"


    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/map_layout_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp" mapbox:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" mapbox:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" mapbox:layout_constraintVertical_bias="0.931"/>

</android.support.constraint.ConstraintLayout>