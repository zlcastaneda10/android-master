                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintVertical_bias="0.98" app:layout_constraintBottom_toTopOf="@+id/button_search"
                android:textSize="16sp" tools:textSize="16sp" android:textAlignment="center"
                android:textColorLink="@color/colorAccent" android:textColor="@color/primaryText"/>
