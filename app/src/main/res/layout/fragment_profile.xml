<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Profile">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:src="@drawable/ic_person_black_24dp"
                android:layout_width="150dp"
                android:layout_height="150dp" android:id="@+id/imageViewProfileImage" android:paddingTop="20dp"
                android:layout_gravity="center"/>
        <TextView
                android:text="DisplayName PlaceHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewDisplayName"
                android:textAlignment="center"/>
        <TextView
                android:text="placeholder@hotmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewEmail" android:textAlignment="center"
                tools:text="placeholder@hotmail.com"/>
        <Button
                android:text="   Como funciona Locky"
                android:onClick="showHowToLocky"
                android:layout_width="match_parent"
                android:textAllCaps="false"
                android:layout_height="wrap_content" android:id="@+id/howToLocky_button"
                tools:text="   Como funciona Locky"
                android:textAlignment="viewStart" android:background="@android:color/background_light"
                android:drawableLeft="@drawable/ic_info_outline_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        <Button
                android:text="   Historial"
                android:onClick="showRecord"
                android:layout_width="match_parent"
                android:textAllCaps="false"
                android:layout_height="wrap_content" android:id="@+id/record_button" tools:text="   Historial"
                android:textAlignment="viewStart" android:background="@android:color/background_light"
                android:drawableLeft="@drawable/ic_history_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        <Button
                android:text="   Cerrar sesión"
                android:onClick="logOut"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/logOut_button" tools:text="   Cerrar sesión"
                android:textAlignment="viewStart" android:background="@android:color/background_light"
                android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    </LinearLayout>
</FrameLayout>